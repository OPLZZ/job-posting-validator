<%# Partial template for recursive rendering of JSON-LD trees %>
<% for k, v in object %>
  <dl class="dl-horizontal">
    <dt><%= k %></dt>
    <dd>
      <% if v.is_a? Hash %>
        <% if v.key? "@language" %>
          <%= v["@value"] %>
        <% else %>
          <%= render partial: "object", locals: {object: v } %>
        <% end %>
      <% else %>
        <% if v.start_with? "http://" %>
          <a href="<%= v %>"><%= v %></a>
        <% else %>
          <%= v %>
        <% end %>
      <% end %>
    </dd>
  </dl>
<% end %>
